<div class="wrapper">
  <div class= "index-form row">
    <%= form_for(@tweet, url: confirm_tweets_path) do |f| %>
      <% if @tweet.errors.any? %>
        <% @tweet.errors.full_messages.each do |msg| %>
          <div class= "alert alert-warning" role="alert">
          <p><%= msg %></p>
        </div>
        <% end %>
      <% end %>
    
      <%= f.text_area :content, :placeholder => 'まだ東京で消耗してるの？', class: 'form-control' %>
      <br>
      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
  <% @tweets.each do |tweet| %>
  <div class="tweets row">
    <div class= "tweet-content">
      <p><%= tweet.content %></p>
    </div>
    <div class= "tweet-operation">
      <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
  </div>
  <% end %>
  <div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
  </div>
</div>